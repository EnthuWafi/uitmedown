<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#FFFFFF"
    android:elevation="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home_black_24dp"
            app:tint="@color/textInactive"/> <TextView
        android:id="@+id/tvHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="9sp"
        android:textColor="@color/textInactive"/> </LinearLayout>

    <LinearLayout
        android:id="@+id/navRequests"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ivRequests"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="@color/textInactive"/>
        <TextView
            android:id="@+id/tvRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requests"
            android:textSize="9sp"
            android:textColor="@color/textInactive"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navSell"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ivSell"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_input_add"
            app:tint="@color/colorAccent"/>
        <TextView
            android:id="@+id/tvSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELL"
            android:textStyle="bold"
            android:textSize="9sp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navMyItems"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ivMyItems"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_agenda"
            app:tint="@color/textInactive"/>
        <TextView
            android:id="@+id/tvMyItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Items"
            android:textSize="9sp"
            android:textColor="@color/textInactive"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navProfile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            app:tint="@color/textInactive"/>
        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="9sp"
            android:textColor="@color/textInactive"/>
    </LinearLayout>

</LinearLayout>